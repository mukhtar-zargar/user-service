{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "no-console": 1,
    "semi": 1,
    "prettier/prettier": [
      2,
      {
        "endOfLine": "auto"
      }
    ]
  },
  "env": {
    "mocha": true
  }
}
